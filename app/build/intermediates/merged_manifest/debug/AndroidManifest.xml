<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.news.droiddebo.mytimes"
    android:versionCode="5"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="34" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.news.droiddebo.mytimes.MyTimesApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.news.droiddebo.mytimes.view.MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.news.droiddebo.mytimes.view.ArticleActivity"
            android:label="@string/title_activity_article"
            android:parentActivityName="com.news.droiddebo.mytimes.view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.news.droiddebo.mytimes.view.MainActivity" />
        </activity>
        <activity
            android:name="com.news.droiddebo.mytimes.view.AboutActivity"
            android:label="@string/title_about_the_app"
            android:parentActivityName="com.news.droiddebo.mytimes.view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.news.droiddebo.mytimes.view.MainActivity" />
        </activity>
        <activity
            android:name="com.news.droiddebo.mytimes.view.WebViewActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.news.droiddebo.mytimes.view.ArticleActivity" />
        </activity>
        <activity
            android:name="com.news.droiddebo.mytimes.view.SearchActivity"
            android:parentActivityName="com.news.droiddebo.mytimes.view.MainActivity"
            android:theme="@style/AppThemeSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.news.droiddebo.mytimes.view.MainActivity" />
        </activity>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>